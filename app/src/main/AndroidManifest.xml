<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aisolutions.bloodcare">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permisson.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodCare">
        <activity android:name=".Activities.News"></activity>
        <activity android:name=".Activities.MyRequests" />
        <activity android:name=".Activities.Profile" />
        <activity android:name=".Activities.Details" />
        <activity android:name=".Activities.AddRequest" />
        <activity android:name=".Activities.ExploreRequest" />
        <activity android:name=".Activities.ExploreDonor" />
        <activity android:name=".Activities.BecomeDonor" />
        <activity android:name=".Activities.Registration" />
        <activity android:name=".Activities.Login" />
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>