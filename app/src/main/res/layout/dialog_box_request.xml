<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_dialog"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/main_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/requestDialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="Request Name"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/requestDialog_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-medium"
            android:text="Kandy"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/requestDialog_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="aaa\nbbb\nccc"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/requestDialog_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="25 May 2021"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/requestDialog_contact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="0.1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cantact" />

            <TextView
                android:id="@+id/requestDialog_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="0777123456"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/requestDialog_bloodGroup"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>