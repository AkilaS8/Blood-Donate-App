<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nList_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="5dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/n_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/n_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            android:fontFamily="sans-serif-medium"
            android:text="News Topic"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/n_Summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/n_topic"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="News Summary"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/n_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/n_Summary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="28 May 2021"
            android:textSize="15dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>